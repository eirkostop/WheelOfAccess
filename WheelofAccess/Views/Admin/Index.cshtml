@model IEnumerable<WheelofAccess.Models.ApplicationUser>

@{
    ViewBag.Title = "Users";
}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-md-6">
                <h3 class="font-weight-bold text-primary">@ViewBag.Title Table</h3>
            </div>
            <div class="col-md-6">
                <a href=@Url.Action("Create") class="btn btn-primary float-right">
                    <i class="fas fa-plus text-white-50"></i>&nbsp; Create New
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Roles)
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Roles)
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>                
                </tfoot>
                <tbody>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @foreach (var ur in item.Roles)
                            {
                                foreach (var r in ViewBag.RoleName)
                                {
                                    if (r.Id == ur.RoleId)
                                    {
                                        @r.Name
                                    }
                                }

                            }
                        </td>
                        <td>
                            <a href=@Url.Action("Edit", new { id = item.Id }) class="btn btn-info"><i class="fas fa-user-tag text-white-50"></i>&nbsp; Edit Role</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section styles{
    <link rel="stylesheet" href="~/Content/datatables/dataTables.bootstrap4.min.css">
}
@section scripts{
    <script src="~/Content/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/datatables/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });

    </script>
}

