@model IEnumerable<WheelofAccess.Models.Place>

@{
    ViewBag.Title = "Places";
}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-md-6">
                <h3 class="font-weight-bold text-primary">@ViewBag.Title Table</h3>
            </div>
            <div class="col-md-6">
                <a href=@Url.Action("Index","Map") class="btn btn-primary float-right">
                    <i class="fas fa-plus text-white-50"></i>&nbsp; Create New In Map
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered  table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Rating)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Rating)
                        </th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                        <td >
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>                       
                        <td>
                            <div class="small mb-1">
                                @Html.DisplayFor(modelItem => item.Rating) / 5
                            </div>
                            <div class="progress progress-sm">
                                <div class="progress-bar progress-bar-animated" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="@(item.Rating/5*100)" style="width: @(item.Rating/5*100)%"></div>
                            </div>
                        </td>
                        <td style="width:150px">
                            <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
                                <a href=@Url.Action("Edit", new { id = item.Id }) class="btn btn-info"><i class="fas fa-pen text-white-50"></i>&nbsp; Edit</a>
                                <a href=@Url.Action("Delete", new { id = item.Id }) class="btn btn-danger"><i class="fas fa-times text-white-50"></i>&nbsp; Delete</a>
                            </div>
                        </td>
                    </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section styles{
    <link rel="stylesheet" href="~/Content/datatables/dataTables.bootstrap4.min.css">
}
@section scripts{
    <script src="~/Content/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/datatables/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });

    </script>
}
