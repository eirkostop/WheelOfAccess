@model IEnumerable<WheelofAccess.Models.Question>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>Answers</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @foreach (var option in item.AllOptions)
        {
            <input type="radio" name="@Html.DisplayFor(x => item.Id)" value="@Html.DisplayFor(x => option.Id)"/> @Html.DisplayFor(x => option.OptionName)
         }
        </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
        @Html.ActionLink("Details", "Details", new { id=item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id=item.Id })
    </td>
</tr>
    
}

</table>

@section Scripts{
    <script>
        const radios = document.querySelectorAll('input[type="radio"]');
        for (let r of radios) {
            r.onclick = e => {
                $.ajax({
                    method: "PUT",
                    url: "/Answers/Answer",
                    data: {
                        Question_Name: e.target.name,
                        Option_ID: e.target.value
                    },
                    success: function (response) {
                        console.log(response);
                        console.log("Success")
                    }
                })
            }
        }
    </script>
    }
