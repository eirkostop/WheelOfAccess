@model IEnumerable<WheelofAccess.Models.Question>

@{
    ViewBag.Title = "Questions";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-md-6">
                <h3 class="font-weight-bold text-primary">@ViewBag.Title Table</h3>
            </div>
            <div class="col-md-6">
                <a href=@Url.Action("Create", "Questions") class="btn btn-primary float-right">
                    <i class="fas fa-plus text-white-50"></i>&nbsp; Create New
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered  table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Text)
                        </th>
                        <th>
                            Answers
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Text)
                        </th>
                        <th>
                            Answers
                        </th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Text)
                            </td>
                            <td>
                                @foreach (var option in item.PossibleAnswers)
                                {
                                @Html.DisplayFor(x => option.Answer) 
                                <span class="small text-grey">
                                    <text> | Value:</text>

                                    @Html.DisplayFor(x => option.AnswerValue)
                                </span><br />
                                                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
                                    <a href=@Url.Action("Edit", new { id = item.Id }) class="btn btn-info"><i class="fas fa-pen text-white-50"></i>&nbsp; Edit</a>
                                    <a href=@Url.Action("Delete", new { id = item.Id }) class="btn btn-danger"><i class="fas fa-times text-white-50"></i>&nbsp; Delete</a>
                                </div>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section styles{
    <link rel="stylesheet" href="~/Content/datatables/dataTables.bootstrap4.min.css">
}
@section scripts{
    <script src="~/Content/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/datatables/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });

    </script>
}

