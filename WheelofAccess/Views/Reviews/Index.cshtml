@model IEnumerable<WheelofAccess.Models.Review>

@{
    ViewBag.Title = "My Reviews";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-md-6">
                <h3 class="font-weight-bold text-primary">@ViewBag.Title Table</h3>
            </div>
            <div class="col-md-6">
                <a href=@Url.Action("Create") class="btn btn-primary float-right">
                    <i class="fas fa-plus text-white-50"></i>&nbsp; Create New
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Place.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Rating)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Comment)
                        </th>

                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Place.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Rating)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Comment)
                        </th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Place.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rating)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Comment)
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
                                <a href=@Url.Action("Edit", new { id = item.Id }) class="btn btn-info"><i class="fas fa-pen text-white-50"></i>&nbsp; Edit</a>
                                <a href=@Url.Action("Delete", new { id = item.Id }) class="btn btn-danger"><i class="fas fa-times text-white-50"></i>&nbsp; Delete</a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section styles{
    <link rel="stylesheet" href="~/Content/datatables/dataTables.bootstrap4.min.css">
}
@section scripts{
    <script src="~/Content/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/datatables/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });

    </script>
}